<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= article.title %></div>
	<form class="ui form" action="/articles/<%= article._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Article Title*</label>
			<input type="text" name="article[title]" value="<%= article.title %>">
		</div>

		<div class="field">
			<label>Author*</label>
			<input type="text" name="article[author]" value="<%= article.author %>">
		</div>
		
		<div class="field">
			<label>Category*</label>
			<input type="text" name="article[category]" value="<%= article.category %>">
		</div>

		<div class="field">
			<label>Image URL</label>
			<input type="text" name="article[image]" value="<%= article.image %>">
		</div>

		<div class="field">
			<label>Content*</label>
			<textarea name="article[content]"><%- article.content %></textarea>
		</div>

		<input class="ui primary basic button" type="submit" value="Submit"> 
	</form>
</div>

<% include partials/footer %>
