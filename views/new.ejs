<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Create Article</div>

	<form class="ui form" action="/articles" method="POST">
		<div class="field">
			<label>Article Title*</label>
			<input type="text" name="article[title]">
		</div>
		
		<div class="field">
			<label>Author*</label>
			<input type="text" name="article[author]">
		</div>
		
		<div class="field">
			<label>Category*</label>
			<input type="text" name="article[category]">
		</div>

		<div class="field">
			<label>Image URL</label>
			<input type="text" name="article[image]">
		</div>

		<div class="field">
			<label>Content*</label>
			<textarea name="article[content]"></textarea>
		</div>

		<input class="ui primary basic button" type="submit" value="Submit"> 
	</form>
</div>

